---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import StartupCard from "../components/StartupCard.astro";
import Navigation from "../components/Navigation.astro";
---

<BaseLayout title="Lukas Juranek">
  <!-- Header Section -->
  <header class="header-with-cover text-white text-center pt-28 sm:pt-32 md:pt-40 pb-16 sm:pb-24 md:pb-32 px-4 relative">
    <Navigation />
    <h1 class="text-4xl sm:text-5xl md:text-6xl mb-3 sm:mb-4">Lukas Juranek</h1>
    <p class="text-md sm:text-xl mb-6 sm:mb-8 font-light text-gray-400">Data Science Student & Entrepreneur</p>
    <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4 max-w-xs md:max-w-none mx-auto">
      <a
        href="#projects"
        class="bg-blue-700 text-white px-6 sm:px-8 py-2.5 sm:py-3 rounded-full hover:bg-blue-800 transition-all duration-200 inline-flex items-center justify-center text-sm sm:text-base"
      >
        View Projects
      </a>
      <a
        href="#contact"
        class="text-gray-400 px-6 sm:px-8 py-2.5 sm:py-3 rounded-full hover:underline transition-colors inline-flex items-center justify-center text-sm sm:text-base hover:underline hover:text-white focus:underline focus:text-white"
        style="text-decoration: none;"
      >
        Contact me
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-3 h-3 text-gray-400 inline-block" fill="none" viewBox="0 0 18 6">
          <line x1="1" y1="3" x2="15" y2="3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <line x1="13" y1="0" x2="17" y2="3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <line x1="17" y1="3" x2="13" y2="6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </a>
      
    </div>
  </header>

  <main class="px-5 sm:px-6 md:px-8 max-w-5xl mx-auto flex flex-col gap-12 sm:gap-16 pt-4">

    <div id="university" class="">
      <span class="text-left flex flex-col items-start gap-2">
        <p class="text-gray-200 font-light">
          I love building software, especially web and mobile apps, and I enjoy exploring UI design. I'm also very interested in entrepreneurship and building businesses that make a meaningful impact.
        </p>
        <span class="mb-2 flex items-center gap-2 font-light">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.49 12 3.75 3.75m0 0-3.75 3.75m3.75-3.75H3.74V4.499" />
          </svg>
          <span class="font-light text-gray-200">Data Science at</span>
          <a href="https://www.uc3m.es" target="_blank" rel="noopener">
            <img src="/img/uc3m-logo.svg" alt="UC3M logo" class="h-8 sm:h-8 inline-block" loading="lazy" />
          </a>
          <a href="https://www.uc3m.es" class="text-white hover:text-blue-400 underline" target="_blank" rel="noopener">UC3M</a>
        </span>
        <span class="flex items-center gap-2 font-light">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.49 12 3.75 3.75m0 0-3.75 3.75m3.75-3.75H3.74V4.499" />
          </svg>
          <a href="https://github.com/lukasjuranek" class="text-white hover:text-blue-400 underline" target="_blank" rel="noopener">GitHub</a>
          <span class="mx-2 text-gray-500">|</span>
          <a href="https://www.linkedin.com/in/lukasjuranek" class="text-white hover:text-blue-400 underline" target="_blank" rel="noopener">LinkedIn</a>
          <span class="mx-2 text-gray-500">|</span>
          <a href="/docs/CV-Lukas-Juranek.pdf" class="text-white hover:text-blue-400 underline" target="_blank" rel="noopener">Resume</a>
          <!-- <span class="mx-2 text-gray-500">|</span>
          <a href="https://instagram.com/luky_juranek" class="text-white hover:text-blue-400 underline" target="_blank" rel="noopener">Instagram</a> -->
        </span>
    </div>

