          src="/img/thumbnail-5.png"
          tag="WEB"
        />

        <ProjectCard
          href="https://tron-arcade.netlify.app"
          title="Tron arcade"
          text="My first javascript game. It's a two-player game inspired by the arcade game from Tron."
          src="/img/thumbnail-6.png"
          tag="GAME"
        />

        <ProjectCard
          href="https://jurankovi-triatlon-old.netlify.app"
          title="jurankovi-triatlon.cz"
          text="Old design of jurankovi-triatlon.cz."
          src="/img/thumbnail-7.png"
          tag="WEB"
        />

        <ProjectCard
          href="https://swimmer-stopwatch.netlify.app/"
          title="Swimmer stopwatch"
          text="A web-based stopwatch for timing two swimmers."
          src="/img/thumbnail-8.png"
          tag="WEB"
        />
      </div>
    </div>

    <!-- Contact -->
    <div id="contact">
      <h1 class="text-left ml-5 text-gray-600 tracking-widest text-3xl sm:text-4xl mb-8 sm:mb-12 md:mb-12">CONTACT</h1>

      <div class="flex justify-start">
        <div class="flex flex-col text-base sm:text-lg space-y-2 text-left">
          <div>
            <a href="https://github.com/lukyjuranek" class="text-white underline hover:text-gray-300 transition-colors">Github</a>
          </div>
          <div>
            <a href="https://www.linkedin.com/in/lukasjuranek" class="text-white underline hover:text-gray-300 transition-colors">LinkedIn</a>
          </div>
          <div>
            <a href="https://instagram.com/luky_juranek" class="text-white underline hover:text-gray-300 transition-colors">Instagram</a>
          </div>
          <div>
            <a href="mailto:lukasjuranek382@gmail.com" class="text-blue-400 hover:text-gray-300 transition-colors">lukasjuranek382@gmail.com</a>
          </div>
          <div>
